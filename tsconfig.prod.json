{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [ "es2015", "dom" ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types/"
    ]
  },
  "compileOnSave": true,
  "angularCompilerOptions": {
    "genDir": "./",
    "skipMetadataEmit": true
  },
  "exclude": [
    "node_modules/*",
    "tmp/*",
    "ng-assets/polyfills.ts"
  ]
}
